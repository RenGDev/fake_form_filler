{
  "manifest_version": 3,
  "name": "Fake Form Filler",
  "version": "1.0",
  "description": "Preenche formul√°rios automaticamente com dados falsos usando Gemini AI.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://fake-form-filler.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gerar Dados Falsos"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
